<tool id="gigaword.load" name="Load Document" version="1.0.0">
  <description>Retrieves a single document from English Gigaword.</description>
  <command interpreter="lsd">load.lsd $token $input $output</command>
  <inputs>
    <param name="input" type="data" format="txt"/>
      <param name="token" type="data" format="oauth" label="OAuth Token"/>
  </inputs>
  <outputs>
    <data name="output" format="lif" label="Output"/>
  </outputs>
